<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.limir.controllers.profile.UserProfile">
    <children>
        <ImageView fx:id="profileImage" fitHeight="150.0" fitWidth="150.0" layoutX="335.0" layoutY="72.0" pickOnBounds="true" preserveRatio="true" />

        <VBox alignment="CENTER" layoutX="14.0" layoutY="10.0" prefHeight="380.0" prefWidth="272.0" spacing="10">
            <Label text="Username:" textFill="RED" />
            <Label fx:id="usernameLabel" />

            <Label text="Full Name: " textFill="RED">
                <font>
                    <Font size="11.0" />
                </font></Label>
            <Label fx:id="nameLabel" />

            <Label text="Email: " textFill="RED" />
            <Label fx:id="emailLabel" />

            <Label text="Phone: " textFill="RED">
                <font>
                    <Font name="System Bold" size="12.0" />
                </font></Label>
            <Label fx:id="phoneLabel" />

            <Label text="Address: " textFill="RED" />
            <Label fx:id="addressLabel" />

            <Label text="Gender: " textFill="RED" />
            <Label fx:id="genderLabel" />

            <Label text="Age: " textFill="RED" />
            <Label fx:id="ageLabel" />
        </VBox>

        <Button fx:id="chooseImageButton" layoutX="300.0" layoutY="222.0" onAction="#handleChooseImageButton" prefHeight="26.0" prefWidth="109.0" text="Редактировать" />
      <Button fx:id="backButton" layoutX="410.0" layoutY="222.0" onAction="#handleBackButton" prefHeight="26.0" prefWidth="109.0" text="Назад" />
    </children>
</AnchorPane>
